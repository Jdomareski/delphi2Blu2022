procedure TForm1.BT_registrarClick(Sender: TObject);
begin
registro;
end;

procedure TForm1.Registro;
var
  xQTD, I: Integer;
  xPreVenda : currency;
  xPreCusto : Currency;
  xPm : Currency;
  xCm : Currency;
  xresultado : string;
begin
      xQtd := strToInt(inputbox('Quantidade de Vendas', 'Insira a quantidade de vendas do dia', '0'));
    for I := 0 to xQTD -1 do
    begin
      xPm := 0;
      xCm := 0;


      xPreVenda := strToInt(inputbox('Preço de Venda', 'O preço de venda deste produto', '0'));
      xPreCusto := strToInt(inputbox('Preço de Custo', 'Insira o preço de custo deste produto', '0'));
      xPm := (xPreVenda + xpm) /xqtd;
      xCm := (xPreCusto + xCm) /xqtd;

      if xPrevenda > xPreCusto then
          xresultado := 'Lucro'

      else if xprevenda = xprecusto then
          xresultado := 'Empate'

          else
          xResultado := 'Prejuízo';

         MMBreg.lines.add('Preço de venda = R$  ' + floatToStr(xPreVenda));
         MMBreg.lines.add('Preço de custo = R$  ' + floatToStr(xPrecusto));
         MMBreg.lines.add('Resultado Venda ' +xresultado);
         MMBreg.lines.add(' ' );
    end;

    LB_TCusto.Caption := currToStr(xCm);
    LB_TValor.Caption := currToStr(xPm);
end;


end.
