{$R *.fmx}

uses UUTils.Enums;

procedure TfrmHome.lstMenuItemClick(const Sender: TCustomListBox;
  const Item: TListBoxItem);
begin
Self.removertelaanterior;

case TEnumMenu(Item.Index) of
mnuTime:
Self.abrirTeam;
mnuPartidas:
self.abrirmatch;
mnupalpites:
self.AbrirBet;
mnuSair:
Self.close;
end;
Multiview1.HideMaster;
end;

